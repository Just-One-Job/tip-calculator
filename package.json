{
  "name": "just-one-job-microapps",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:tip": "cd apps/tip-calculator && bunx expo start",
    "web:tip": "cd apps/tip-calculator && bunx expo start --web",
    "build:web:tip": "cd apps/tip-calculator && bun run build:web",
    "dev:deal": "cd apps/deal-steal && bunx expo start",
    "web:deal": "cd apps/deal-steal && bunx expo start --web",
    "build:web:deal": "cd apps/deal-steal && bun run build:web",
    "prepare:npm": "node scripts/prepare-npm-workspaces.js",
    "preinstall": "node scripts/prepare-npm-workspaces.js",
    "install:npm": "npm run prepare:npm && npm install",
    "build:netlify:tip": "npm --workspace=apps/tip-calculator run build:web",
    "build:netlify:deal": "npm --workspace=apps/deal-steal run build:web"
  }
}
